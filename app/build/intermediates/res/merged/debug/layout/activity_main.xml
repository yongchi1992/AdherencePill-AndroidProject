<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/material_blue_500"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp">
    <TextView
        android:id="@+id/textView"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AdherencePill"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView"
        android:fontFamily="sans-serif"
        android:hint="username"
        android:padding="15dp" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username"
        android:fontFamily="sans-serif"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="15dp" />
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_below="@+id/saveLoginCheckBox"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/conformButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_alignBaseline="@+id/cancelButton"
        android:layout_alignBottom="@+id/cancelButton"
        android:layout_toStartOf="@+id/cancelButton" />

    <CheckBox
        android:id="@+id/saveLoginCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text="Remember Me"
        android:layout_below="@+id/pwd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_alignStart="@+id/conformButton" />

</RelativeLayout>